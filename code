import os
import streamlit as st
from openai import AzureOpenAI

# -------------------------
# Azure configuration
# -------------------------
AZURE_ENDPOINT = os.getenv(
    "AZURE_ENDPOINT",
    "add your end point to the code",
)
AZURE_API_KEY = os.getenv(
    "AZURE_API_KEY",
    "add your api key",
)
AZURE_DEPLOYMENT = os.getenv("AZURE_DEPLOYMENT", "gpt-4.1-2")
AZURE_API_VERSION = os.getenv("AZURE_API_VERSION", "2024-12-01-preview")

# Initialize client
client = AzureOpenAI(
    api_key=AZURE_API_KEY,
    azure_endpoint=AZURE_ENDPOINT,
    api_version=AZURE_API_VERSION,
)

# -------------------------
# Streamlit page setup
# -------------------------
st.set_page_config(page_title="Azure GPT Chat", page_icon="ðŸ¤–", layout="centered")

# -------------------------
# Custom Styling
# -------------------------
st.markdown(
    """
    <style>
    [data-testid="stAppViewContainer"] {
        background: linear-gradient(135deg, #f5e8ff 0%, #e7e9ff 100%);
        color: #2b254a;
        font-family: "Inter", sans-serif;
    }

    /* Chat container */
    .chat-container {
        max-width: 720px;
        margin: 40px auto;
        padding: 20px 24px;
        background: #ffffff;
        border-radius: 22px;
        box-shadow: 0 6px 20px rgba(150, 120, 255, 0.1);
        border: 1px solid #ece7ff;
    }

    /* Header */
    .chat-header {
        text-align: center;
        font-weight: 700;
        font-size: 24px;
        color: #6b32ff;
        margin-bottom: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .chat-subtitle {
        text-align: center;
        color: #7b7399;
        font-size: 14px;
        margin-bottom: 20px;
    }

    /* Message bubbles */
    .assistant-row, .user-row {
        display: flex;
        align-items: flex-start;
        margin: 8px 0;
    }
    .assistant-row { justify-content: flex-start; }
    .user-row { justify-content: flex-end; }

    .assistant-bubble {
        background-color: #f3f0ff;
        color: #2b254a;
        padding: 12px 16px;
        border-radius: 16px 16px 16px 4px;
        max-width: 70%;
        font-size: 15px;
        line-height: 1.4;
        box-shadow: 0 2px 6px rgba(105, 85, 200, 0.05);
    }

    .user-bubble {
        background-color: #d7c8ff;
        color: #2b254a;
        padding: 12px 16px;
        border-radius: 16px 16px 4px 16px;
        max-width: 70%;
        font-size: 15px;
        line-height: 1.4;
        box-shadow: 0 2px 6px rgba(100, 70, 180, 0.08);
    }

    /* Avatars */
    .avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        margin: 0 10px;
        box-shadow: 0 0 0 2px #ede9ff;
    }

    /* Input & Buttons */
    .stTextInput > div > div > input {
        border-radius: 14px;
        padding: 12px;
        border: 1px solid #dcd1ff;
        background: #fdfcff;
    }

    .stButton > button {
        border-radius: 12px;
        background-color: #a37bff;
        color: white;
        font-weight: 600;
        border: none;
        padding: 10px 20px;
    }

    .stButton > button:hover {
        background-color: #8a64e0;
    }
    </style>
    """,
    unsafe_allow_html=True,
)

# -------------------------
# Sidebar (clean, no image)
# -------------------------
with st.sidebar:
    st.markdown("### ðŸ¤– Azure GPT Chatbot")
    st.markdown("Your AI-powered assistant built with **Azure OpenAI Service**.")
    st.markdown("---")
    st.markdown("**Tips:**")
    st.markdown("- Ask about coding, ML, or general topics.\n- Get professional summaries.\n- Chat naturally!")
    st.markdown("---")
    if st.button("ðŸ§¹ Clear Chat"):
        st.session_state.messages = [
            {"role": "assistant", "content": "Chat cleared âœ¨ How can I assist you next?"}
        ]
        st.experimental_rerun()

# -------------------------
# Header
# -------------------------
st.markdown(
    """
    <div class="chat-header">
        <img src="https://i.ibb.co/2M1fJ6Y/assistant-icon.png" width="30">
        Azure GPT Chat
    </div>
    """,
    unsafe_allow_html=True,
)

st.markdown(
    '<div class="chat-subtitle">A chatbot powered by Azure OpenAI âœ¨</div>',
    unsafe_allow_html=True,
)

# -------------------------
# Chat history
# -------------------------
if "messages" not in st.session_state:
    st.session_state.messages = [
        {"role": "assistant", "content": "Hi there ðŸ‘‹, I'm your Azure AI assistant. How can I help you today?"}
    ]

# -------------------------
# Display chat messages
# -------------------------
st.markdown('<div class="chat-container">', unsafe_allow_html=True)
for msg in st.session_state.messages:
    if msg["role"] == "user":
        st.markdown(
            f"""
            <div class="user-row">
                <div class="user-bubble">{msg['content']}</div>
                <img class="avatar" src="https://i.ibb.co/7v5Fv3B/user-icon.png" alt="user">
            </div>
            """,
            unsafe_allow_html=True,
        )
    else:
        st.markdown(
            f"""
            <div class="assistant-row">
                <img class="avatar" src="https://i.ibb.co/2M1fJ6Y/assistant-icon.png" alt="assistant">
                <div class="assistant-bubble">{msg['content']}</div>
            </div>
            """,
            unsafe_allow_html=True,
        )
st.markdown('</div>', unsafe_allow_html=True)

# -------------------------
# Input box
# -------------------------
with st.form(key="chat_form", clear_on_submit=True):
    user_input = st.text_input("Type your message...", placeholder="Say something friendly ðŸ˜Š")
    submitted = st.form_submit_button("Send")

    if submitted and user_input:
        st.session_state.messages.append({"role": "user", "content": user_input})
        try:
            response = client.chat.completions.create(
                model=AZURE_DEPLOYMENT,
                messages=st.session_state.messages,
                max_completion_tokens=300,
            )
            reply = response.choices[0].message.content
            st.session_state.messages.append({"role": "assistant", "content": reply})
            st.experimental_rerun()
        except Exception as e:
            st.error(f"Error: {e}")
